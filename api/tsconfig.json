{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2023",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"paths": {
			"@/*": ["./src/*"],
			"@controllers/*": ["./src/controllers/*"],
			"@services/*": ["./src/services/*"],
			"@tests/*": ["src/spec/*"]
		}
	},
	"include": ["src/**/*", "src/**/*.js", "src/**/*.ts", "eslint.config.mjs"]
}
